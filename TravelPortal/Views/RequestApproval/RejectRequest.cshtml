            color: white;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
        }

        .comment-area {
            margin-top: 20px;
            text-align: center;
        }

        #commentInput {
            width: 80%;
            padding: 10px;
            margin-bottom: 10px;
        }

        #rejectButton {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        #divMessage{
             background-color: red;
             display:none;
        }
    </style>
</head>
<body>
    <div class="centered-message">
        <div id="divMessage">
            Request is rejected.
        </div>
        <div class="comment-area">
           
            <div id="divSection">
                <textarea id="commentInput" placeholder="Add comments"></textarea>
                <button id="rejectButton" onclick="RejectCurrentRequest()">Reject</button>
            </div>
           
        </div>
    </div>
    <script>
        function RejectCurrentRequest() {

            if ($("#commentInput").val() != ""){
            // Make an AJAX request
            $.ajax({
                type: "POST", // Use the appropriate HTTP method
